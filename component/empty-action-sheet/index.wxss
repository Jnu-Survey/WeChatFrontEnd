.wrapper {
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    visibility: hidden;
    z-index: 11;
}

.wrapper.visible {
    visibility: visible;
}

.backdrop {
    background-color: rgba(0,0,0,.2);
    top: 0;
}

.backdrop,.popup {
    bottom: 0;
    left: 0;
    opacity: 0;
    position: absolute;
    right: 0;
    transition: all .2s linear;
}

.popup {
    background-color: #fff;
    border-radius: 4px 4px 0 0;
    transform: translate3d(0,100%,0);
}

.visible .popup {
    opacity: 1;
    transform: translate3d(0,0,0);
}

.visible .backdrop {
    opacity: 1;
}

@import "/app.wxss";
/* pages/account/account.wxss */
.page-profile,page {
    height: 100%;
    background-color: rgb(231, 238, 240);
}

.top {
    width: 100%;
    height: 400rpx;
    margin-bottom: 70rpx;
    padding-top: 70rpx;
}

.infoBox {
    display: flex;
    padding: 20rpx 0 0 70rpx;
    justify-content: start;
    align-items: center;
}

.infoText {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
}

.userName {
    font-size: 45rpx;
    margin-bottom: 10rpx;
}

.infoButton {
    position: absolute;
    right: 30rpx;
    padding: 25rpx 30rpx;
    color: rgb(62, 184, 104);
    font-size: 28rpx;
    border-radius: 40rpx;
    background-color: white;
}

.dataShow {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    padding-left: 30rpx;
    top: 320rpx;
}

.dataShowbox {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 335rpx;
    line-height: 50rpx;
    padding: 30rpx 0;
    background-color: white;
    border-radius: 20rpx;
}

.dataShowbox:first-child {
    margin-right: 30rpx;
}

.user-icon {
    border: 1rpx solid #d9d9d9;
    border-radius: 50%;
    height: 130rpx;
    width: 130rpx;
    margin-right: 30rpx;
}

.user-icon>image {
    border: none;
}

.userinfo {
    margin-left: 30rpx;
}

.profile-list {
    width: 700rpx;
    margin: 0 auto;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    background-color: white;
    margin-top: 30rpx;
    padding: 60rpx 0 50rpx 40rpx;
    border-radius: 25rpx;
    box-shadow: 5rpx 5rpx 3rpx rgba(204, 204, 204, .3);
}

.title {
    color: #000;
    font-size: 45rpx;
    margin-bottom: 40rpx;
}

.profile-box {
    display: flex;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
}

.iconfont {
    width: 70rpx;
    margin-right: 25rpx
}

.profile-box .iconfont:last-child {
    width: 50rpx;
    position: absolute;
    right: 0;
}


.profile-box>.list-item:first-child {
    margin: 10rpx 50rpx 25rpx 0;
}

.profile-box>.list-item:last-child {
    margin: 25rpx 50rpx 0 0;
    border: 0;
    padding: 0;
}

.isDoing {
    margin: 20rpx auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

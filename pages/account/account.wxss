/* pages/account/account.wxss */
.page-profile,page {
    height: 100%;
    background-color: rgb(231, 238, 240);
}

.top {
    width: 100%;
    height: 250rpx;
    margin-bottom: 220rpx;
    padding-top: 100rpx;
    background-size: 100%;
}

.infoBox {
    display: flex;
    padding: 20rpx 0 0 70rpx;
    justify-content: start;
    align-items: center;
}

.infoText {
    display: flex;
    height: 130rpx;
    flex-direction: column;
    justify-content: space-around;
    font-size: 32rpx;
}

.userName {
    font-size: 48rpx;
}

.infoButton {
    position: absolute;
    right: 30rpx;
    padding: 25rpx 30rpx;
    color: rgb(62, 184, 104);
    font-size: 28rpx;
    border-radius: 40rpx;
    background-color: white;
}

.dataShow {
    display: flex;
    justify-content: space-around;
    width: 80%;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    top: 60rpx;
    box-shadow: 1px 2px 4px 0px rgba(112, 82, 82, 0.5);
    background-color: rgb(255,255,255);
    padding: 25rpx 20rpx;
    border-radius: 28rpx;
}

.dataShowbox {
    display: flex;
    width: 40%;
    flex-direction: column;
    justify-content: center;
    background-color: rgb(250, 250, 250);
    align-items: center;
    line-height: 50rpx;
    padding: 20rpx 0;
    border-radius: 20rpx;
    font-size: 36rpx;
}

.dataShowbox>view:first-child {
    font-size: 46rpx;
}

.col {
    width: 4rpx;
    height: 150rpx;
    background-color: rgb(151, 151, 151);
}

.user-icon {
    border: 1rpx solid #d9d9d9;
    border-radius: 50%;
    height: 130rpx;
    width: 130rpx;
    margin-right: 30rpx;
}

.user-icon>image {
    border: none;
}

.userinfo {
    margin-left: 30rpx;
}

.profile-list {
    width: 680rpx;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    background-color: white;
    margin: 35rpx;
    margin-top: 10rpx;
    padding: 40rpx;
    border-radius: 25rpx;
    box-shadow: 5rpx 5rpx 3rpx rgba(204, 204, 204, .3);
}

.swiperContaioner {
    height: 330rpx;
    display: flex;
    flex-direction: column;
}

.swiper-list {
    width: 600rpx;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    background-color: white;
    margin: 30rpx auto;
    margin-top: 10rpx;
    padding: 40rpx;
    border-radius: 25rpx;
    box-shadow: 5rpx 5rpx 3rpx rgba(204, 204, 204, .3);
}

.title {
    width: 700rpx;
    display: flex;
    font-size: 45rpx;
    align-items: center;
    margin: 30rpx auto;
}

.doing {
    color: #000;
    font-size: 45rpx;
}

.more,.create {
    color: rgb(151, 151, 151);
    font-size: 36rpx;
    text-decoration: underline;
    margin-left: 355rpx;
}

.noDoing {
    font-size: 42rpx;
    color: #000;
    margin-bottom: 50rpx;
}

.createTip {
    font-size: 34rpx;
    color: rgb(120, 118, 118);
}

.profile-box {
    display: flex;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    font-size: 36rpx;
}

.iconfont {
    width: 70rpx;
    margin-right: 25rpx
}

.profile-box .iconfont:last-child {
    width: 50rpx;
    position: absolute;
    right: 0;
}


.profile-box>.list-item:first-child {
    margin: 10rpx 50rpx 25rpx 0;
}

.profile-box>.list-item:last-child {
    margin: 25rpx 50rpx 0 0;
    border: 0;
    padding: 0;
}

.isDoing {
    display: flex;
    flex-direction: column;
}

.dointTitle {
    font-size: 42rpx;
    color: #000;
    margin-bottom: 30rpx;
}

.dointTips {
    font-size: 38rpx;
    color: rgb(90, 88, 88);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.dointTime {
    font-size: 32rpx;
    color: rgb(109, 107, 107);
}

.divide {
    width: 100%;
    height: 4rpx;
    margin: 15rpx auto;
    background-color: rgb(168, 168, 168);
}

.indexFixed{
    z-index: 99;
    position: fixed;
    top:0;
    top:0;
    left:0;
    bottom:0;
    right:0;
    background-color: #666;
   }

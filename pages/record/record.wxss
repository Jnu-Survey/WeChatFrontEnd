/* pages/record/record.wxss */
.page {
    align-items: center;
    flex-direction: column;
    justify-content: center;
    height: 100%;
}

.page-entries-index{
    background-color: #f7f7fc;
}

/* 填表记录不为空时列表渲染css */
.weui-panel {
    background-color: #fff;
    margin-top: 10px;
    overflow: hidden;
    position: relative;
}

.weui-panel:first-child {
    margin-top: 0;
}

.weui-panel:before {
    border-top: 1rpx solid #e5e5e5;
    top: 0;
}

.weui-media-box {
    padding: 15px;
    position: relative;
}

.weui-media-box:before {
    border-top: 1rpx solid #e5e5e5;
    color: #e5e5e5;
    content: " ";
    height: 1px;
    left: 0;
    left: 15px;
    position: absolute;
    right: 0;
    top: 0;
}

.weui-media-box_appmsg {
    -webkit-box-align: center;
    align-items: center;
    display: flex;
}

.weui-cell_active {
    background-color: #ececec;
}

.weui-media-box:first-child:before {
    display: none;
}

.weui-panel:after,.weui-panel:before {
    color: #e5e5e5;
    content: " ";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
}

.weui-panel:after {
    border-bottom: 1rpx solid #e5e5e5;
    bottom: 0;
}

.weui-panel__hd::after {
    border-bottom: none;
}

.weui-navbar {
    border-bottom: 1rpx solid #ccc;
    display: flex;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 5;
}

.weui-navbar__item {
    -webkit-box-flex: 1;
    display: block;
    flex: 1;
    font-size: 0;
    padding: 30rpx 10rpx;
    position: relative;
    text-align: center;
}

.weui-cell_primary {
    -webkit-box-align: start;
    align-items: flex-start;
}

.weui-bar__item_on {
    color: #2875e8;
}

.weui-panel__hd {
    background: #efeff4;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 28rpx;
}

.weui-navbar__title {
    word-wrap: normal;
    display: inline-block;
    font-size: 35rpx;
    max-width: 8em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: auto;
}

.weui-tab__content {
    width: 100%;
    height: 100%;
}

.mine-box {
    color: #000;
}

.weui-media-box__desc {
    font-size: 24rpx;
    margin-top: 6rpx;
}

.page-entries-index .weui-navbar__slider {
    background: #2875e8;
}

.page-entries-index .weui-navbar {
    background: #fff;
}

.page-entries-index .weui-bar__item_on {
    position: relative;
}

.weui-tab {
    height: 100%;
    position: relative;
}

.weui-tab__panel {
    box-sizing: border-box;
    height: 100%;
    overflow: hidden;
    padding-top: 300rpx;
}

.page-entries-index .weui-bar__item_on::after {
    background: #2875e8;
    bottom: 0;
    content: "";
    height: 6rpx;
    left: 0;
    position: absolute;
    transform: translateX(50%);
    width: 50%;
}

.page-entries-index .avatar {
    border-radius: 50%;
    height: 50rpx;
    margin-right: 20rpx;
    width: 50rpx;
}

.df {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.title {
    font-size: 40rpx;
    margin-top: 50rpx;
}

.text-muted {
    color: #999;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.df image {
    margin: 0 auto;
    width: 400rpx;
    border: none;
}
/* pages/dataView/dataView.wxss */
.tableContainer{
    width: 100%;
    overflow: scroll;
    margin: 30rpx auto;
  }
  /* 表格代码   */
  .table{
    border:1px solid #dadada;
    border-right:0;
    border-bottom: 0;
  }
  .tr{
    width:100%;
    display: flex;
    justify-content: space-between;
  }
  .th,.td{
    padding: 10px;
    border-bottom: 1px solid #dadada;
    border-right: 1px solid #dadada;
    text-align: center;
    width: 100%;
    min-width: 200rpx;
  }
  .th{
    font-weight: 800;
    background-color: rgb(240, 255, 215);
    font-size: 32rpx;
    color: #330e0e;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .td{
    font-size: 30rpx;
    color: #330e0e;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .empty {
    margin: 0 auto;
    width: 580rpx;
    color: #999;
    font-size: 32rpx;
    text-align: center;
}
.pic {
    width: 500rpx;
    margin-left: 50%;
    transform: translateX(-50%);
    margin-top: 250rpx;
}
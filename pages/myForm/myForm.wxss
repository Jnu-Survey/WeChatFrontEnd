/* pages/myForm/myForm.wxss */
.page,page {
    align-items: center;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    width: 100%;
    background-color: #f7f7fc;
}

.weui-tab__content {
    width: 100%;
    height: 100%;
}

.page-entries-index{
    height: 100%;
}

.df {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 300rpx;
}


.title {
    font-size: 40rpx;
}

.text-muted {
    color: #999;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.df image {
    margin: 50rpx auto;
    width: 300rpx;
    border: none;
}


.list {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 30rpx;
    background-color: #f7f7fc;
}

.section {
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    border: 1px solid #e3e3e3;
    box-shadow: 0px 2px 4px 0px rgba(207,203,203,0.5);
    margin-bottom: 40rpx;
    border-radius: 22rpx;
}

.doingText {
    color: purple;
}

.doingCard {
    background-color: rgb(240, 255, 215);
}

.collectingCard {
    background-color: rgb(215, 234, 255);
}

.collectedCard {
    background-color: rgb(255, 210, 210);
}

.collectingText {
    color:#20a439;
}

.collectedText {
    color: #FFA4A4;
}

.listTop {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 40rpx;
}

.icon {
    width: 70rpx;
}

.listTopText {
    display: flex;
    height: 90rpx;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    margin-left: 25rpx;
}

.title {
    color: rgb(15, 15, 15);
    font-size: 38rpx;
}

.tip {
    width: 500rpx;
    margin-top: 25rpx;
    font-size: 38rpx;
    color: rgb(158, 158, 158);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.status {
    margin-left: 300rpx;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 10rpx;
}

.divide {
    width: 100%;
    height: 4rpx;
    background-color: rgb(162, 164, 159);
    margin-top: 10rpx;
}

.time {
    color: rgb(125, 127, 120);
    font-size: 34rpx;
}

.listBottom {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    background-color: rgb(250, 250, 250);
}

.bottomItem {
    width: 33.333%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottomItem image {
    width: 50rpx;
    margin-right: 10rpx;
}

.indexFixed{
    z-index: 99;
    position: fixed;
    top:0;
    top:0;
    left:0;
    bottom:0;
    right:0;
    background-color: #666;
   }
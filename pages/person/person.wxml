<!--pages/person/person.wxml-->
<view class="page-profile">
    <view class="top" style="background-image: url(../../https://img.hengyimonster.top/img///image/personBack.png);">
        <view class="infoBox">
            <!-- 头像 -->
            <view class="user-icon">
                <image class="user-icon" src="{{userInfo.avatarUrl||'https://img.hengyimonster.top/img/avatar_default.png'}}"></image>
            </view>
            <!-- 用户信息 -->
            <view>{{userInfo.nickName || '用户名'}}</view>
        </view>

        <view class="profile-list">
            <view class="title">正在进行</view>
            <swiper style="max-height: 250rpx;" autoplay="true" circular>
                <swiper-item>
                    <!-- 暂时没有进行中的表单 -->
                    <view class="isDoing" wx:if="{{!doingForm.length}}">
                        <image class="iconfont" mode="widthFix" src="https://img.hengyimonster.top/img/emptyDoing.png"></image>
                        <text>暂时没有进行中的表单</text>
                    </view>
                </swiper-item>
                <!-- 有正在进行中的表单 -->
            </swiper>
            
        </view>
    </view>

    <view class="profile-list">
        <view class="title">个人中心</view>
        <view class="profile-box">
            <view class="list-item">
                <image class="iconfont" mode="widthFix" src="https://img.hengyimonster.top/img/myForm.png"></image>
                <text>我的表单</text>
            </view>
            <view class="list-item">
                <image class="iconfont" mode="widthFix" src="https://img.hengyimonster.top/img/usage.png"></image>
                <text>使用说明</text>
            </view>
        </view>
    </view>


    <view class="profile-list">
        <text class="title">关于我们</text>

        <view class="profile-box">
            <view class="list-item">
                <image class="iconfont" mode="widthFix" src="https://img.hengyimonster.top/img/team.png"></image>
                <text>团队介绍</text>
            </view>

            <view class="list-item">
                <image class="iconfont" mode="widthFix" src="https://img.hengyimonster.top/img/feedback.png"></image>
                <text>提交反馈</text>
            </view>

            <view class="list-item">
                <image class="iconfont" mode="widthFix" src="https://img.hengyimonster.top/img/logging.png"></image>
                <text>更新日志</text>
            </view>
        </view>
    </view>
</view>


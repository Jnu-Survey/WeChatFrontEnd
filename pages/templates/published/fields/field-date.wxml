<template name="field-date-display">
    <view class="bg-white top-control left-control">
        <template is="display-title" data="{{label:label,notes:notes,validations:validations}}"></template>
        <text class="single-control label">年-月-日</text>
    </view>
</template>
<template name="field-date">
    <template is="template-title" data="{{label:label,notes:notes,validations:validations}}"></template>
    <view class="field-box">
        <picker bindchange="dateChange" id="field_{{api_code}}" mode="date" name="{{api_code}}" value="{{value}}">
            <view class="form-input">{{value}}</view>
        </picker>
        <view class="weui-cell" wx:if="{{readonly}}">{{value}}</view>
    </view>
</template>
<import src="display-title"></import>

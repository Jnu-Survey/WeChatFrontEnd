/* pages/create-form/create-form.wxss */
.page,page {
    height: 100%;
    overflow: auto;
    background: #efeff4;
    box-sizing: border-box;
    position: relative;
}

.formHead {
    width: 700rpx;
    margin: 30rpx auto;
    padding: 50rpx 45rpx 0 45rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.formTitle {
    text-align: center;
    font-size: 40rpx;
    margin-bottom: 45rpx;
}

.addQuestion {
    width: 300rpx;
    display: flex;
    margin: 0 auto;
    position: absolute;
    bottom: 150rpx;
    left: 50%;
    transform: translateX(-50%);
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
    border-radius: 40rpx;
    background-color: white;
    color: #FF8531;
}

.addQuestionIcon {
    width: 40rpx;
    margin-right: 20rpx;
}

.fixed-btns {
    position: absolute;
    bottom: 25rpx;
    left: 50%;
    transform: translateX(-50%);
}

.showField {
    height: 65%;
    overflow: scroll;
    padding: 0 30rpx;
}

.preview {
    background-color: rgb(51, 51, 51);
    padding: 20rpx 30rpx;
    color: white;
    border-radius: 15rpx;
    border: 2px solid rgb(16, 142, 233);
}
/* pages/create-form-list/create-form-list.wxss */
view {
    box-sizing: border-box;
}

.create-form-list {
    padding: 10rpx 30rpx;
}

.create-form-list .header {
    color: #333;
    font-size: 45rpx;
    font-weight: 700;
    margin: 20rpx 0 30rpx 0;
}

.shareHeader {
    color: #333;
    font-size: 45rpx;
    font-weight: 700;
    margin-top: 20rpx;
}

.create-empty-form {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 4rpx;
    font-size: 38rpx;
    border: 1px solid hsla(0,0%,89%,.8);
    box-shadow: 1px 2px 4px 0px rgba(233,230,230,0.500000);
    padding: 45rpx 0 45rpx 60rpx;
    margin-bottom: 50rpx;
}

.create-empty-form image {
    height: 80rpx;
    width: 80rpx;
}

.create-empty-form .empty-text {
    margin-left: 30rpx;
}

.list {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.section {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 45rpx 0 45rpx 60rpx;
    background-color: #fff;
    border-radius: 6rpx;
    border: 1px solid #e3e3e3;
    box-shadow: 1px 2px 4px 0px rgba(233,230,230,0.500000);
    list-style: none;
    margin-bottom: 40rpx;
    text-align: center;
}

.icon {
    height: 80rpx;
    width: 80rpx;
}

.title {
    color: #333;
    font-size: 38rpx;
    margin-left: 30rpx;
}

.import {
    color: rgba(90,88,88,1);
    font-size: 34rpx;
    font-weight: bold;
    font-family: STKaitiSC-Regular;
    text-align: right;
    letter-spacing: 6rpx;
    text-decoration: underline;
    margin-bottom: 20rpx;
}
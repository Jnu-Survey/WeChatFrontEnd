/* pages/field/field.wxss */
.page__bd {
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: rgb(246, 248, 251);
}

.page {
    padding: 35rpx;
    background-color: white;
    border-radius: 20rpx;
}

.title {
    font-size: 40rpx;
    margin-bottom: 25rpx;
}

.field-textarea {
    height: 120rpx;
    line-height: 40rpx;
}

.mustBox {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.mustTip {
    margin-left: 15rpx;
}

.single-control {
    display: flex;
    align-items: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 38rpx;
    color: rgb(117, 117, 117);
    border-bottom: 1px solid #F0F0F0;
}


.picker {
    padding: 10px 0;
}

.delIcon {
    width: 42rpx;
    height: 42rpx;
    margin-right: 10rpx;
}

.addOption {
    display: flex;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 33rpx;
    color: rgb(255, 133, 51);
}

.addIcon {
    width: 33rpx;
    height: 33rpx;
    margin-right: 10rpx;
}

.weui-select {
    height: 2.5em;
    line-height: 2.5em;
    margin: 20rpx 0;
    border: 1px solid #c8c8cd;
    border-radius: 10rpx;
    padding-left: 15px;
    padding-right: 30px;
    position: relative;
}

.weui-select:before {
    border-color: #c8c8cd;
    border-style: solid;
    border-width: 2px 2px 0 0;
    content: " ";
    display: inline-block;
    height: 6px;
    margin-top: -4px;
    position: absolute;
    right: 15px;
    top: -2px;
    top: 50%;
    transform: matrix(.71,.71,-.71,.71,0,0);
    width: 6px;
}

.delAndSaveBox {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 20rpx;
}

.save {
    color: #2875e8;
    font-size: 38rpx;
}

.del {
    color: #e23c3d;
    font-size: 38rpx;
}

.weui-cells::after {
    border-bottom: none;
}

.weui-cells::before {
    border-top: none;
}

.choice-options input {
    width: 90%;
}

.choice-options .iconfont {
    color: #f13838;
    margin-right: 20rpx;
}

.add-option {
    color: #000;
}

.add-option .iconfont {
    color: #6db329;
}

.add-option .weui-cell__bd {
    padding-left: 2px;
}

.weui-cell__ft {
    margin-right: 15rpx;
}

.field-icon {
    align-items: center;
    color: #1a9cfc;
    justify-content: center;
    padding-right: 20rpx;
}

.field-icon .iconfont {
    font-size: 30px;
}

.icon-box {
    font-size: 55rpx;
}

.field-content {
    flex: 1;
}

.autograph-input {
    border: 1rpx solid #e3e3e3;
    color: #000;
    padding: 0 10rpx;
}

.field-tip {
    font-size: 20rpx;
    padding: 20rpx 30rpx;
}

.attribute-tip {
    background-color: #ffe9ed;
    border: 1rpx solid #ff2851;
    border-radius: 5rpx;
    color: #ff2851;
    font-size: 23rpx;
    margin: 10rpx 30rpx 20rpx;
    padding: 6rpx 10rpx;
}

.bottom-split {
    border-bottom: 1rpx solid #e5e5e5;
}

.tips {
    color: #999;
    font-size: 14px;
    margin-top: .77em;
    padding-left: 15px;
    padding-right: 15px;
}
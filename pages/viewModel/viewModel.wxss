/* pages/create-form/create-form.wxss */
.page,page {
    height: 100%;
    overflow: auto;
    background: #efeff4;
    box-sizing: border-box;
    position: relative;
}

.formHead {
    width: 700rpx;
    margin: 45rpx auto;
    margin-bottom: 15rpx;
    padding: 30rpx 45rpx 0 45rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.formTitle {
    text-align: center;
    font-size: 40rpx;
    margin-bottom: 35rpx;
}

.formTitle::placeholder {
    color: rgb(149, 151, 152);
}

.showField {
    height: 65%;
    overflow: scroll;
    padding: 0 30rpx;
}

.useModal {
    position: absolute;
    bottom: 25rpx;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgb(51, 51, 51);
    padding: 12rpx 30rpx;
    color: white;
    border-radius: 15rpx;
    border: 2px solid rgb(16, 142, 233);
}